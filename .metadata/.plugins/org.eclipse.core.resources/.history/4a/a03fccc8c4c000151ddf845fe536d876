package enumExample;

/* Declare a person class */
public class Person {
	
	/* Define a hairColor instance variable of type HairColor */
	HairColor hairColor;
	
	/* Constructor for the Person class */
	Person(HairColor hairColorIn) {
		hairColor = hairColorIn;
	}
	
	/* Getters and Setters */
	/* Get this persons hair color */
	public HairColor getHairColor() {
		return hairColor;
	}
	
	/* Set this persons hair color */
	public void setHairColor(HairColor hairColorIn) {
		hairColor = hairColorIn;
	}
	
}
