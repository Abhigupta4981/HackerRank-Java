package stackQueue;

/* Manually implement a Java Stack of integers */
public class StackInt extends StackQueueInt {
	
	/* Constructor for the StackInt Class */
	StackInt() {
		/* Create the superClass */
		super();
	}
	
	/* Push data onto the stack */
	public void push (int newData) {
		/* Create a new node to add to the stack */
		Node newNode = new Node(newData);
		/* Is the linked list empty? */
		if (tail == null) {
			/* Put the new node at the head of the list */
			head = newNode;
			tail = newNode;
		} else {
			/* Add the new node to the tail */
			tail.next = newNode;
			tail = newNode;
		}
	}
	
	/* Peek at the top of the stack */
	public int peek() {
		/* Is the stack empty? */
		if (head == null) {
			/* Probably need to throw an exception here */
			return 0;
		} else {
			/* Return the data at the tail of the list */
			return tail.data;
		}
	}
}
